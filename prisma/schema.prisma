// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
	Id Int	@default(autoincrement()) @id
	FirstName String
	LastName String
	Email String @unique

  Invitation Invitation[]
	Attendee Attendee[]
	Gathering Gathering[]
}

model Gathering {
	Id Int	@default(autoincrement()) @id
	CreatorId Int
	Type Int
	ScheduledAt DateTime
	Name String
	Location String
	MaxiumNumberOfAttendess Int?
  InvitationsExpireAtUtc DateTime?

	Attendee Attendee[]
  Invitation Invitation[]
	Creator   Member   @relation(fields: [CreatorId], references: [Id])
	GatheringType   GatheringType   @relation(fields: [Type], references: [Id])
}

model GatheringType {
  Id       Int     @id @default(autoincrement())
  Label    String  @db.VarChar(50)

  Gathering Gathering[]
}

model Attendee {
	Id     Int    @id @default(autoincrement())
  MemberId Int    
  GatheringId Int    

	Member   Member   @relation(fields: [MemberId], references: [Id])
	Gathering   Gathering   @relation(fields: [GatheringId], references: [Id])

}

model Invitation {
	Id     Int    @id @default(autoincrement())
  MemberId Int  
	InvitationStatusId Int
  GatheringId Int
	CreatedOnUtc DateTime @default(now())   

	InvitationStatus   InvitationStatus   @relation(fields: [InvitationStatusId], references: [Id])
	Member   Member   @relation(fields: [MemberId], references: [Id])
	Gathering   Gathering   @relation(fields: [GatheringId], references: [Id])
}

model InvitationStatus {
  Id       Int     @id @default(autoincrement())
  Label    String  @db.VarChar(50)

  Invitation Invitation[]
}

